{
  "name": "tari-explorer",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "nodemon --watch './**/*.ts' --ignore './build/**' --ext ts --exec 'npm run build && node ./build/index.js'",
    "build": "rm -rf ./build && tsc --build tsconfig.json",
    "fmt": "prettier --end-of-line auto -w **/*.{ts,hbs}",
    "check-fmt": "prettier --end-of-line auto -c .",
    "lint": "eslint . ",
    "lint-fix": "eslint --fix ."
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "asciichart": "^1.5.25",
    "cors": "^2.8.5",
    "express": "~5.1.0",
    "fast-csv": "^5.0.2",
    "grpc-promise": "^1.4.0",
    "hbs": "^4.1.2",
    "pino-http": "^10.5.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
